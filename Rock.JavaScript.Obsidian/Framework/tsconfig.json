{
  "compilerOptions": {
    "outDir": "../dist/Framework",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "target": "ES2016",
    "module": "System",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "strict": true,
    "lib": [
      "DOM",
      "ES2016",
      "ES2020.Symbol.WellKnown" /* Fixes compile issue in Vue declaration files, not actually in use. */
    ],
    "paths": {
      "@Obsidian/ViewModels": ["ViewModels/index"]
    }
  },
  "exclude": [
    "./Tests/**/*"
  ]
}
